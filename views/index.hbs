            <div class="row">
                <div id="tCarousel" class="carousel slide w-50" data-ride="carousel">
                    <div class="carousel-inner">
                        {{{makeImages imageLinks}}}
                    </div>
                    <a class="carousel-control-prev" href="#tCarousel" role="button" data-slide="prev">
                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                        <span class="sr-only">Previous</span>
                    </a>
                    <a class="carousel-control-next" href="#tCarousel" role="button" data-slide="next">
                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                        <span class="sr-only">Next</span>
                    </a>
                </div>
                <div class="d-block w-50" style="overflow-y:scroll; max-height:500px">
                    {{{makeCards cards}}}
                </div>
            </div>
            <div class="row">
                <form class="d-block w-50" action="/" method="POST">
                    <div style="display:flex; justify-content: space-between;">
                        <label for="nasa" style="display: inline-block; margin-right:1em">Search for NASA images:</label>
                        <input name="nasaSearch" id="nasa" style="display: inline-block;">
                        <input type="submit" style="margin-right:1em" value="Search">
                    </div>
                </form>
                <form class="d-block w-50" action="/" method="POST">
                    <div style="display:flex; justify-content: space-between;">
                        <label for="drawSlider" style="display: inline-block; margin-right:1em">Draw cards:</label>
                        <input type="number" name="draw" id="drawSlider" class="w-50" style="display: inline-block;" min="1" max="52">
                        <input type="submit" style="margin-right:1em" value="Draw">
                    </div>
                </form>
            </div>
